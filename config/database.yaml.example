# Database Configuration Example
# Copy this file to database.yaml and modify as needed

# Default configuration (used as fallback)
default:
  host: localhost
  port: 5432
  database: college_compass
  user: postgres
  password: postgres

# Local development environment
local:
  host: localhost
  port: 5432
  database: college_compass
  user: postgres
  password: postgres

# Replit environment (uses environment variables)
replit:
  use_env_vars: true
  fallback:
    host: ${PGHOST}
    port: ${PGPORT}
    database: ${PGDATABASE}
    user: ${PGUSER}
    password: ${PGPASSWORD}
